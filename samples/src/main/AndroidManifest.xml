<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android">
        
        <uses-permission android:name="android.permission.INTERNET" />
        
        <application
                android:allowBackup="false"
                android:icon="@mipmap/ic_launcher"
                android:label="@string/app_name"
                android:theme="@style/AppTheme"
                >
                
                <activity
                        android:name=".HomeActivity"
                        android:exported="true"
                        >
                        <intent-filter>
                                <action android:name="android.intent.action.MAIN" />
                                <category android:name="android.intent.category.LAUNCHER" />
                        </intent-filter>
                </activity>
                
                <activity
                        android:name=".image_cropping.ImageCroppingActivity"
                        android:exported="false"
                        android:theme="@style/TransparentStatusBar"
                        />
                
                <activity
                        android:name=".image_cropping.NetworkImageCroppingActivity"
                        android:exported="false"
                        android:theme="@style/TransparentNavigationAndStatusBar"
                        />
                
                <activity
                        android:name=".rounded_corners.RoundedCornerImagesActivity"
                        android:exported="false"
                        android:label="@string/rounded_corners"
                        android:theme="@style/Theme.MaterialComponents.NoActionBar"
                        />
        
        </application>
</manifest>